{
    // =============================================================================
    // Python Configuration
    // =============================================================================
    "[python]": {
        // Formatear automáticamente al guardar
        "editor.formatOnSave": true,
        // Usar Ruff como formatter
        "editor.defaultFormatter": "charliermarsh.ruff",
        // Organizar imports al guardar
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },

    // =============================================================================
    // Ruff Extension Settings (nuevo servidor nativo)
    // =============================================================================
    // Line length se toma de pyproject.toml automáticamente
    // No necesita configuración adicional aquí

    // =============================================================================
    // Editor Settings
    // =============================================================================
    "editor.rulers": [100],
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // =============================================================================
    // Python Path
    // =============================================================================
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    // =============================================================================
    // Testing
    // =============================================================================
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["tests/"]
}
